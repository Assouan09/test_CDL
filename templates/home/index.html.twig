{% block title %}Bienvenue !{% endblock %}

{% block content %}
        <div class="container text-center">
            <h1> La biblioth√®que Saint-Priest </h1>
        </div>
    <div class="container">
        <div class="row ">
            <div class="col-md-2">
                <h3>Filtrer</h3>
                {{ form(search) }}
                <br>
            </div>
